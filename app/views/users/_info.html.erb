<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg", size: "100x100") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>

  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
  </tr>

  <tr>
    <th>
      <% if user == current_user %>
        <div class='row'>
          <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
        </div>
      <% else %>
        <% if current_user.following?(user) %>
          <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-danger" %>
        <% else %>
          <%= link_to "フォローをする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %>
        <% end %>
      <% end %>
      
      <% if user.id == current_user.id %>
        <% else %>
          <% if isRoom == true %>
            <p><a href="/rooms/<%= roomId %>">チャットへ</a>
          <% else %>
            <%= form_for room do |f| %>
              <%= fields_for entry do |e| %>
                <%= e.hidden_field :user_id, :value=> user.id %>
              <% end %>
              <%= f.submit "チャットを始める" %>
            <% end %>
          <% end %>
        <% end %>
        
        <%= link_to "ユーザー一覧に戻る", users_path %>

    </th>
  </tr>
</table>

